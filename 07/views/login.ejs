    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <div class="w-full h-screen bg-zinc-900 text-white p-10">
        <h3 class="text-2xl font-bold mb-6">Login to your account</h3>
        <form method="post" action="/login">
            <input class="px-2 py-2 rounded-md bg-transparent border-2 border-zinc-800 outline-none" type="text" placeholder="email" name="email">
            <input class="px-2 py-2 rounded-md bg-transparent border-2 border-zinc-800 outline-none" type="password" placeholder="password" name="password">
            <input class="px-4 py-2 rounded-md bg-blue-600" type="submit" value="LOGIN">
        </form>
    </div>
</body>
