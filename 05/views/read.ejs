    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-gray-900 p-10 text-white">
        <div class="nav mb-15">
            <a class="text-blue-400" href="/">Back to Home</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-5">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length>0){ %>
                <% users.forEach(function(user){ %>
                    <div class=" user w-72 p-4 bg-gray-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-500"></div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-gray-400"><%= user.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-gray-200" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-gray-400">No users found</h1>
            <% } %>
            
            
        </div>
    </div> 
</body>
</html>