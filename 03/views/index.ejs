<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">

        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full outline-none rounded-lg px-6 py-3 bg-zinc-500" type="text" placeholder="Enter something" name="title"/>
                <textarea class="block w-full outline-none rounded-lg mt-4 px-6 py-3 bg-zinc-500" placeholder="What is your task" name="description"></textarea>
                <input class="mt-4 px-6 py-3 bg-blue-500 rounded-lg cursor-pointer hover:bg-blue-600" type="submit" value="Create Task" />
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-75 px-5 py-4 rounded-lg bg-zinc-700">
                        <h1 class="text-white  text-2xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center mt-2">
                            <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read More!</a>
                            <a class="text-zinc-600" href="/edit/<%= val%>">edit filename</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-700">No tasks available</h3>
            <% } %>
            

